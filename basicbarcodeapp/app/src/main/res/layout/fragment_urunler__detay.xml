<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="URUNLER DETAY"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="URUN BARKOD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textSize="18sp"
            android:id="@+id/urunbarkod"
            android:layout_height="wrap_content"
            />


        <ImageView
            android:id="@+id/barkodtara"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_camera"
            android:layout_height="40dp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="URUN ADI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:id="@+id/urunadi"
            android:inputType="text"
            android:layout_height="wrap_content"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="URUN ADEDİ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:id="@+id/urunadedi"
            android:inputType="number"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="URUN FİYATI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:id="@+id/urunfiyati"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/urunkaydet"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginEnd="150dp"
            android:background="@drawable/ic_save"
            android:backgroundTint="@color/black"
            android:layout_height="50dp">

        </ImageView>

        <ImageView
            android:id="@+id/urunguncelle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@drawable/ic_update"
            android:backgroundTint="@color/black"
            android:layout_height="50dp">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sepeteekle"
            android:layout_width="70dp"
            android:background="@drawable/ic_sepet"
            android:backgroundTint="@color/black"
            android:layout_height="70dp">

        </ImageView>

    </LinearLayout>



</LinearLayout>